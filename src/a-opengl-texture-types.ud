  (subsection
    (title "Format_t")

    (para-verbatim ada_type_synopsis
"type Format_t is
 (Color_Index,
  Red,
  Green,
  Blue,
  Alpha,
  RGB,
  BGR,
  RGBA,
  BGRA,
  Luminance,
  Luminance_Alpha);")

    (para "The " (item ada_type "Format_t") " type is an enumeration
      type specifying pixel data formats."))

  (subsection
    (title "Data_Type_t")
    (para-verbatim ada_type_synopsis
"  type Data_Type_t is
   (Unsigned_Byte,
    Byte,
    Bitmap,
    Unsigned_Short,
    Short,
    Unsigned_Integer,
    Integer,
    Float,
    Unsigned_Byte_3_3_2,
