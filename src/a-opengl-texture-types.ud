"type Internal_Format_t is
 (Alpha,
  Alpha_4,
  Alpha_8,
  Alpha_12,
  Alpha_16,
  Compressed_Alpha,
  Compressed_Luminance,
  Compressed_Luminance_Alpha,
  Compressed_Intensity,
  Compressed_RGB,
  Compressed_RGBA,
  Luminance,
  Luminance_4,
  Luminance_8,
  Luminance_12,
  Luminance_16,
  Luminance_Alpha,
  Luminance_4_Alpha_4,
  Luminance_6_Alpha_2,
  Luminance_8_Alpha_8,
  Luminance_12_Alpha_4,
  Luminance_12_Alpha_12,
  Luminance_16_Alpha_16,
  Intensity,
  Intensity_4,
  Intensity_8,
  Intensity_12,
  Intensity_16,
  R3_G3_B2,
  RGB,
  RGB_4,
  RGB_5,
  RGB_8,
  RGB_10,
  RGB_12,
  RGB_16,
  RGBA,
  RGBA_2,
  RGBA_4,
  RGB5_A1,
  RGBA_8,
  RGB10_A2,
  RGBA_12,
